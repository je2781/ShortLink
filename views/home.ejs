<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">


</head>
<body>
    <main>
        <% if(Msg) { %>
            <div class="<%= hasMessage ? 'user-message' : 'user-message user-message--error' %>"><%= Msg %></div>
        <% } %>
        <h2>Welcome To Shortlink</h2>
        <form class='url-form' method="POST" action="/encode" 
            novalidate>
            <div class="form-control">
                <label for="longUrl">Enter Url</label>
                <input 
                class="<%= validationErrors.find(e => e.path === 'longUrl') ? 'invalid' : '' %>"
                type="text" 
                name="longUrl" 
                id="longUrlurl" />
            </div>
            <button type="submit">Submit</button>
        </form>
    </main>
    </body>
    </html>
